<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basic_nav"
    app:startDestination="@id/trendsFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rdp.ghostium.ui.tabs.settings.SettingsFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
        android:id="@+id/walletFragment"
        android:name="com.rdp.ghostium.ui.tabs.nft.NftsFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_nfts" />
    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.rdp.ghostium.ui.tabs.articles.ArticlesFragment"
        android:label="fragment_articles"
        tools:layout="@layout/fragment_articles" />
    <fragment
        android:id="@+id/trendsFragment"
        android:name="com.rdp.ghostium.ui.tabs.cryptos.TrendsFragment"
        android:label="fragment_trends"
        tools:layout="@layout/fragment_trends">
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.rdp.ghostium.ui.tabs.search.SearchFragment"
        android:label="SearchFragment">
        <deepLink app:uri="ghostium://searchFragment" />
    </fragment>
</navigation>