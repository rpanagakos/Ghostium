<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basic_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ghostzilla.ui.tabs.settings.SettingsFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settingsFavouriteAction"
            app:destination="@id/favouriteFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/walletFragment"
        android:name="com.example.ghostzilla.ui.tabs.nft.NftsFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_nfts" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ghostzilla.ui.tabs.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/trendsFragment"
        android:name="com.example.ghostzilla.ui.tabs.trends.TrendsFragment"
        android:label="fragment_trends"
        tools:layout="@layout/fragment_trends" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.ghostzilla.ui.tabs.settings.favourite.FavouriteFragment"
        android:label="favouriteFragment">
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ghostzilla.ui.tabs.search.SearchFragment"
        android:label="SearchFragment" />
</navigation>