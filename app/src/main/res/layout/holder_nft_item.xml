<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="nft"
            type="com.example.ghostzilla.models.opensea.Asset" />

        <variable
            name="clickHandler"
            type="com.example.ghostzilla.abstraction.ItemOnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_marginStart="@dimen/medium_spacing"
        android:layout_marginTop="@dimen/medium_spacing"
        android:background="@drawable/card_nft_item">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginTop="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/small_spacing"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@{nft.name}"
            android:textAppearance="@style/small_text_bold"
            app:layout_constraintBottom_toTopOf="@+id/nftPicture"
            app:layout_constraintEnd_toEndOf="@id/nftPicture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Legend of Lycanthrope #601" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/favouritesButton"
            android:layout_width="@dimen/medium_container"
            android:layout_height="@dimen/medium_container"
            android:layout_marginBottom="@dimen/medium_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_fileName="favourite.json"
            app:lottie_progress="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nftPicture"
            rectangleImageUrl="@{nft.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/medium_spacing"
            android:layout_marginTop="@dimen/medium_spacing"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:layout_marginBottom="@dimen/medium_spacing"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/favouritesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>