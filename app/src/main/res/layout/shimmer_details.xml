<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginStart="@dimen/large_spacing"
        android:layout_marginEnd="@dimen/large_spacing"
        android:layout_marginTop="@dimen/large_spacing">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/lowPriceLabel2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintEnd_toStartOf="@id/highPriceLabel2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/highPriceLabel2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/lowPriceLabel2" />

        <View
            android:id="@+id/totalVolLabel2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="@id/lowPriceLabel2" />

        <View
            android:id="@+id/lowPriceValue2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lowPriceLabel2" />

        <View
            android:id="@+id/highPriceValue2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toStartOf="@id/highPriceLabel2"
            app:layout_constraintTop_toBottomOf="@id/highPriceLabel2" />

        <View
            android:id="@+id/totalVolValue2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/totalVolLabel2"
            app:layout_constraintTop_toBottomOf="@id/totalVolLabel2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/statsBoard2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/large_spacing"
            app:cardBackgroundColor="@color/Cultured"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/totalVolValue2" />

        <View
            android:id="@+id/titleDescription2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/large_spacing"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/statsBoard2"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>