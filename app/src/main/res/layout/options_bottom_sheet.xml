<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="optionOne"
            type="com.example.ghostzilla.models.settings.AppOption" />

        <variable
            name="isLast"
            type="Boolean"
            android:value="true" />

        <variable
            name="optionSecond"
            type="com.example.ghostzilla.models.settings.AppOption" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line"
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/large_spacing"
            android:background="@drawable/ic_bottom_sheet_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/firstOption"
            layout="@layout/option_bottomsheet_item"
            option="@{optionOne}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <include
            android:id="@+id/secondOption"
            isLastOption="@{isLast}"
            layout="@layout/option_bottomsheet_item"
            option="@{optionSecond}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstOption" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>