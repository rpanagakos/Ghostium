<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="displayError"
            type="java.lang.Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_background"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/transparent"
                android:gravity="start|top"
                android:hint="@string/enter_your_crypto"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textAppearance="@style/caption_bold"
                app:layout_constraintBottom_toTopOf="@id/bottomLine"
                app:layout_constraintEnd_toStartOf="@id/searchButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/enter_your_crypto" />

            <View
                android:id="@+id/bottomLine"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/underline_text_input"
                app:layout_constraintEnd_toEndOf="@id/searchEditText"
                app:layout_constraintStart_toStartOf="@id/searchEditText"
                app:layout_constraintTop_toBottomOf="@id/searchEditText" />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/searchbutton"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@id/bottomLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/searchEditText"
                app:tint="@color/Black" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/backToTopImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/contract_image_trends"
            android:elevation="24dp"
            android:padding="6dp"
            android:src="@drawable/ic_back_to_top"
            android:tint="@color/Black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/contractsTrendsRecycler" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contractsTrendsRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="24dp"
            android:scrollbars="none"
            android:visibility="@{displayError ?  View.GONE : View.VISIBLE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchConstraint"
            tools:itemCount="8"
            tools:listitem="@layout/holder_trends_item" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="64dp"
            android:visibility="@{displayError ?  View.VISIBLE : View.GONE}"
            app:lottie_autoPlay="true"
            app:lottie_repeatCount="2"
            app:lottie_fileName="nothing_found.json"
            app:layout_constraintTop_toBottomOf="@id/searchConstraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:visibility="@{displayError ?  View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/large_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lottieImage"
            android:layout_marginTop="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>