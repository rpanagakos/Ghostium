<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ghostzilla" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Black</item>
        <item name="colorPrimaryVariant">@color/dede</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="android:statusBarColor">@color/dede</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Ghostzilla.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ghostzilla.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ghostzilla.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Ghostzilla.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Ghostzilla.AppWidgetContainer" parent="Theme.Ghostzilla.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>