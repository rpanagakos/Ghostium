<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.AppTheme.NoActionBar.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.NoActionBar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditProfileEditTextTheme">
        <item name="colorControlNormal">@color/Black</item>
        <item name="colorControlActivated">@color/Black</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="tiny_text">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Gray3</item>
    </style>

    <style name="tiny_text_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="TabCustomAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
    </style>

    <style name="small_text_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="regular_text">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="large_text">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="large_text_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="large_xlarge_text">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="large_xlarge_text_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="xlarge_text_bold_white">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="small_regular">
        <item name="android:fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="small_regular_gray">
        <item name="android:fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Gray3</item>
    </style>

    <style name="tiny_regular">
        <item name="android:fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="medium_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">26sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="medium_gray">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Gray3</item>
        <item name="android:lineHeight" tools:targetApi="p">26sp</item>
    </style>

    <style name="large_gray">
        <item name="fontFamily">@font/montserrat_compose</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Gray3</item>
        <item name="android:lineHeight" tools:targetApi="p">26sp</item>
    </style>

    <style name="caption_bold">
        <item name="fontFamily">@font/montserrat_compose_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="big_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/CoolGray</item>
    </style>

    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

</resources>